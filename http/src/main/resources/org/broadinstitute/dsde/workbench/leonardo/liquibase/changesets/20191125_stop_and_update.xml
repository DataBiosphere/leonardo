            <column name="updatedWorkerDiskSize" type="INT" defaultValue="NULL" />
        </addColumn>

        <addColumn tableName="CLUSTER">
            <column name="updatedNumberOfWorkerLocalSSDs" type="INT" defaultValue="NULL" />
